<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

  <variable name="logDirectory" value="${basedir}/backend-logs"/>

  <targets>
    <target xsi:type="File" name="fullLog" fileName="${logDirectory}/${shortdate}-log.json">
      <layout xsi:type="JsonLayout" >
        <attribute name="time" layout="${longdate}" />
        <attribute name="level" layout="${level:upperCase=true}"/>
        <attribute name="message" layout="${message}" />
      </layout>
    </target>
    <target xsi:type="File" name="warnLog" fileName="${logDirectory}/${shortdate}-warnLog.json">
      <layout xsi:type="JsonLayout" >
        <attribute name="time" layout="${longdate}" />
        <attribute name="level" layout="${level:upperCase=true}"/>
        <attribute name="message" layout="${message}" />
      </layout>
    </target>
  </targets>

  <rules>
    <logger name="*" writeTo="fullLog" />
    <logger name="*" minlevel="Warn" writeTo="warnLog" />
  </rules>
</nlog>